			 			BlackElo = line.substring(line.indexOf("\"")+1,line.indexOf("]")-1);
			 			BlackElo = stringCorrecter.correct(BlackElo);
			 			BlackEloInt = Integer.parseInt(BlackElo);
			 			System.out.print(" 7 ");
		 			}
		 		}
			 	else {
			 		Moves.append(line);
			 		Moves.append(" ");
			 	}
			 
			 else
				 emptyLineCount++;
			 
			 
			 if(emptyLineCount == 2) {
			
				 Statement statement = conn.createStatement();
				 String sqlStatement;
				 
